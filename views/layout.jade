  head
    meta(http-equiv="X-UA-Compatible",content="IE=edge,chrome=1")
    meta(name="viewport",content="width=device-width")
    meta(charset="utf-8")
    if typeof title !== "undefined"
        title=title

    block stylesheets
    link(rel='stylesheet', href='/stylesheets/style.css')    

  body

    #old-browser
        h4 You are using an <strong>outdated</strong> browser
        p Please <a href="http://browsehappy.com/">upgrade your browser</a> or <a href="http://www.google.com/chromeframe/?redirect=true">activate Google Chrome Frame</a> to improve your experience and see this visualization.

    .navbar.navbar-fixed-top
        .navbar-inner
            .pull-right.top10
                a(href="http://jplusplus.org/", target="_blank").right20
                    img(src="/images/jpp.png", alt="Journalism++")
                a(href="http://lexpress.fr/", target="_blank")
                    img(src="/images/express.png", alt="L'express").right10
            ul.nav
                li(class=path=="/"?"active":"")
                    a(href="/") Démarche
                li(class=path=="/contribuer"?"active":"")
                    a(href="/contribuer") Contribuer
                li(class=path=="/explorer"?"active":"")
                    a(href="/explorer") Explorer            

    block content

    if path!=="/explorer"
        footer
            .container.tc
                p 
                 | <strong>Des données pour l'autisme</strong> est 
                 | un projet de <a href="https://twitter.com/silveroux" target="_blank">Damien Brunon</a> 
                 | développé par <a href="https://twitter.com/pirhoo" target="_blank">Pierre Romera</a>
                 | et disponible <a href="https://github.com/jplusplus/desdonneespourlautisme" target="_blank">sur Github</a>.
            

    script(src="/javascripts/vendor/modernizr.custom.js", type="text/javascript")
